    <%= form.label :food_id, style: "display: block" %>
    <%= form.collection_select :food_id, @available_foods, :id, :name, prompt: "Select a food" %>
  </div>
  <div>
    <div>
      <%= form.submit %>
    </div>
  </div>
<% end %>
