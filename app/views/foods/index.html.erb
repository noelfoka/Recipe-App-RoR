<p style="color: green"><%= notice %></p>
<table class="table table-striped table-bordered">
  <thead class= "table-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Measurement unit</th>
      <th scope="col">Unit price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td>$ <%= food.price %></td>
        <td><%= button_to "Delete", food, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New food", new_food_path, class:"btn btn-dark"%>
